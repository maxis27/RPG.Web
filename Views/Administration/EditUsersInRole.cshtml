@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Dodaj/usuń użytkowników z roli";
    var roleId = ViewBag.roleId;
}

<div class="card">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {   
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId">
                    <input type="hidden" asp-for="@Model[i].UserName">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input">
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                </div>
            }
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Aktualizuj</button>
                <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-info">Anuluj</a>
            </div>
        </form>
    </div>
</div>